---
import '../styles/global.css';

const {title, image, link, github, desc} = Astro.props;
---
<div class="cursor-pointer rounded-xl overflow-hidden shadow hover:shadow-lg transition border border-white p-4 mt-4">
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <p class="text-white mt-2">{desc}</p>
    <img src={image} alt={title} class="w-full h-48 object-cover mt-2 rounded-lg" />
    <div class="mt-4">
        {link && (<a href={link} class="text-blue-400 hover:underline mr-4" target="_blank">Live Link</a>)}
        {github &&(<a href={github} class="text-blue-400 hover:underline" target="_blank">GitHub</a>)}
    </div>
</div>

