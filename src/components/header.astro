---
import '../styles/global.css';
import profile from '../assets/profile.jpg';
---

<header class="w-full bg-zinc-800 text-white px-4 py-2 sticky top-0 z-50 shadow-md">
    <div class="container flex justify-between mx-auto items-center">
        <div class="logo flex">
            <div>
                <img src={profile.src} alt="Profile Picture" class="w-10 rounded-full mr-2" />
            </div>
            <div class="flex flex-col">
                <h1>Alexander Edwardio</h1>
                <h1>IT Guy</h1>
            </div>
        </div>
        <nav>
            <ul class="flex space-x-3">
                <li><a href="#" class="hover:underline decoration-wavy">Home</a></li>
                <li><a href="#" class="hover:underline decoration-wavy">About</a></li>
                <li><a href="#" class="hover:underline decoration-wavy">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>